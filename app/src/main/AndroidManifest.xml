<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.syllas.e_bazar">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListaVestuarioActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaOngActivity"
            android:label="@string/title_activity_lista_ong"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CadastroVestuarioActivity"
            android:label="@string/title_activity_cadastro_vestuario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CarrinhoActivity"
            android:label="@string/title_activity_carrinho"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CadastroOngActivity"></activity>
    </application>

</manifest>